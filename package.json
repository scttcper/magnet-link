{
  "name": "@ctrl/magnet-link",
  "version": "0.0.0-placeholder",
  "description": "Parse a magnet URI into an object",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "homepage": "https://magnet-link.vercel.app",
  "license": "MIT",
  "repository": "scttcper/magnet-link",
  "keywords": [
    "torrent",
    "magnet",
    "link",
    "magnet-uri"
  ],
  "type": "module",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "scripts": {
    "demo:build": "npm run build --workspace=demo",
    "demo:watch": "npm run dev --workspace=demo",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prepare": "npm run build",
    "build": "tsc",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:ci": "c8 --reporter=text --reporter=lcov ava"
  },
  "dependencies": {
    "@ctrl/ts-base32": "^2.1.1"
  },
  "devDependencies": {
    "@ctrl/eslint-config": "3.2.0",
    "@sindresorhus/tsconfig": "2.0.0",
    "@types/node": "17.0.1",
    "ava": "4.0.0-rc.1",
    "buffer": "6.0.3",
    "c8": "7.10.0",
    "tsm": "2.2.1",
    "typescript": "4.5.4"
  },
  "ava": {
    "files": [
      "test/**/*.spec.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=tsm"
    ]
  },
  "workspaces": [
    "demo"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "master"
  },
  "engines": {
    "node": ">=14.16"
  }
}
